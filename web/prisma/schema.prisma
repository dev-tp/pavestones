generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  hash     String
}

model Pavestone {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  patron       String
  dedicated_to String
  is_deceased  Boolean   @default(false)
  x            Int
  y            Int
  date         DateTime @default(now())
}
